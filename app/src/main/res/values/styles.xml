<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImgPurr" />

    <style name="ImgPurr.TextStyle" />

    <style name="ImgPurr.TextStyle.ErrorTitle">
        <item name="android:textColor">@color/colorDarkJungleGreen</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="ImgPurr.TextStyle.ErrorMessage">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ImgPurr.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">8sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">@color/button_background</item>
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>
